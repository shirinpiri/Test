@using perfumedecant.Models.Repository
@{
    Layout = "~/Views/Shared/_DashboardBrand.cshtml";
    Rep_Brand rep_brand = new Rep_Brand();
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" style="text-align:right">
                <a class="close" style="cursor: pointer;" onclick="$('.alert').hide()">×</a>
                @ViewBag.Error
            </div>
        }
        <button onclick="location.href='@Url.Action("AddBrand", "DashboardBrand")';return false;" type="submit" class="btn add-btn">افزودن</button>

        <table id="users" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>نام</th>
                    <th>تصویر</th>
                    <th>حذف</th>
                </tr>
            </thead>
            <tbody>
                @if (rep_brand.GetAllBrands().Count() > 0)
                {
                    foreach (var brand in rep_brand.GetAllBrands())
                    {
                        <tr>
                            <td>@brand.Brand_Title</td>
                            <td>
                                <img src="~/Uploads/BrandImages/@brand.Brand_ImageIndex" class="img-rounded" alt="@brand.Brand_Title" width="60" height="60">
                            </td>
                            <td>@Html.ActionLink(" ", "DeleteBrand", new { brandID = brand.Brand_ID }, new { data_toggle = "tooltip", title = "حذف", @class = "fa fa-trash", onclick = "return confirm('آیا از حذف این برند مطمئن هستید؟');" })</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" style="color:red;font-size:14px">هیچ داده ای برای نمایش موجود نمی باشد.</td>
                    </tr>
                }

            </tbody>
        </table>

    </div><!--/. container-fluid -->
</section>
<!-- /.content -->
