
<section class="PerfumeList_Section">
    <div class="shop-area section-padding-1 list2-col-style">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop-top-bar mb-35">
                        <div class="select-shoing-wrap">
                            @*<p>Showing 1–12 of 20 result</p>*@
                        </div>
                    </div>
                    <div class="shop-bottom-area" id="product-tabs">
                        <div class="row">
                            @if (Model.Perfumes.Count > 0)
                            {
                                double delay = 0.0;
                                foreach (var perfume in Model.Perfumes)
                                {
                                    delay = delay + 0.2;
                                    string delay1 = delay + "s";
                                <div class="col-lg-6 col-md-12 col-12">
                                    <div class="shop-list-wrap mb-30 scroll-zoom">
                                        <div class="row">
                                            <div class="col-xl-8 col-lg-7 col-md-7 col-sm-6">
                                                <div class="shop-list-content">
                                                    <a href='@Url.Action("Perfume_Details", "Perfume", new { perfumeID = perfume.Perfume_ID })'>

                                                        <h3>@perfume.Perfume_Name</h3>
                                                        <div><span>جنسیت : @perfume.Perfume_Gender </span></div>
                                                        <div><span>گروه بویایی:@perfume.Perfume_OlfactionGroups</span></div>
                                                        <div><span>طبع و رایحه: @perfume.Perfume_TemperOfPerfume</span></div>
                                                        <p class="showPart">@perfume.Perfume_Description</p>
                                                       
                                                        </a>
                                                    <div class="shop-list-btn btn-hover">
                                                            <a href='@Url.Action("Perfume_Details", "Perfume", new { perfumeID = perfume.Perfume_ID })'>افزودن به سبد خرید</a>
                                                        </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-4 col-lg-5 col-md-5 col-sm-6">
                                                <div class="product-wrap">
                                                    <div class="product-img">
                                                        <a href='@Url.Action("Perfume_Details", "Perfume", new { perfumeID = perfume.Perfume_ID })'>

                                                            <img class="default-img" src="~/Uploads/PerfumeImages/@perfume.Perfume_ImageIndex" alt="">
                                                            <img class="hover-img" src="~/Uploads/PerfumeImages/@perfume.Perfume_ImageIndex" alt="">
                                                   </a>
                                                            </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                }
                            }
                            else
                            {
                                <p style="direction:rtl">محصولی برای نمایش موجود نمی باشد.</p>
                            }
                        </div>
                        <div class="pro-pagination-style text-center mt-30 mb-30">
                            <ul>
                                @if (Model.CurrentPageIndex > 1)
                                {
                                    if (Model.brandID != null && Model.brandID > 0)
                                    {
                                        <li><a class="prev" href="@Url.Action("PerfumesBrand", "Perfume", new {brandID = Model.brandID,type = Model.type, currentPageIndex = (Model.CurrentPageIndex-1) })"><i class="fa fa-angle-double-right"></i></a></li>

                                    }
                                    else
                                    {
                                        <li><a class="prev" href="@Url.Action("Perfumes", "Perfume", new {brandID = 0,type = Model.type, currentPageIndex = (Model.CurrentPageIndex-1) })"><i class="fa fa-angle-double-right"></i></a></li>
                                    }
                                }
                                @for (int i = 1; i <= Model.PageCount; i++)
                                {
                                    if (i != Model.CurrentPageIndex)
                                    {
                                        if (Model.brandID != null && Model.brandID > 0)
                                        {
                                            <li><a href="@Url.Action("PerfumesBrand", "Perfume", new { brandID = Model.brandID, type = Model.type, currentPageIndex = i })">@i</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="@Url.Action("Perfumes", "Perfume", new { brandID = 0, type = Model.type, currentPageIndex = i })">@i</a></li>
                                        }
                                    }
                                    else
                                    {
                                        <li><a class="active" href="#">@i</a></li>

                                    }

                                }
                                @if (Model.CurrentPageIndex < Model.PageCount)
                                {
                                    if (Model.brandID != null && Model.brandID > 0)
                                    {
                                        <li><a class="next" href="@Url.Action("PerfumesBrand", "Perfume", new { brandID = Model.brandID, type = Model.type, currentPageIndex = (Model.CurrentPageIndex + 1) })"><i class="fa fa-angle-double-left"></i></a></li>
                                    }
                                    else
                                    {
                                        <li><a class="next" href="@Url.Action("Perfumes", "Perfume", new { brandID = 0, type = Model.type, currentPageIndex = (Model.CurrentPageIndex + 1) })"><i class="fa fa-angle-double-left"></i></a></li>

                                    }
                                }
                            </ul>
                        </div>
                    </div>

                    <div>
                        <div id="filterResult" style="display:none">
                            <div class="row" id="filterResultRow">

                            </div>
                        </div>
                        <div id="NoResult" style="display:none">
                            محصولی یافت نشد!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@Html.Partial("Modal_Section")
