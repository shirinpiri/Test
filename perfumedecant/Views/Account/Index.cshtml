<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="login-register-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-toggle="tab" href="#lg1">
                            <h4> ورود </h4>
                        </a>
                        <a data-toggle="tab" href="#lg2">
                            <h4> ثبت نام </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                @if (ViewBag.result != null)
                                {
                                    <div class="alert alert-danger error_message">
                                        <a class="close" style="cursor: pointer;" onclick="$('.alert').hide()">×</a>
                                        @ViewBag.result
                                    </div>
                                }

                                <div class="login-register-form">
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @id = "frm_Login", @class = "form" }))
                                    {
                                        <div class="mb-30">
                                            @Html.TextBoxFor(model => model.User_Username, new { placeholder = "نام کاربری", id = "User_Username" })
                                            @Html.ValidationMessageFor(model => model.User_Username, "", new { @class = "validation-message" })
                                        </div>
                                        <div class="mb-30">
                                            @Html.PasswordFor(model => model.User_Password, new { placeholder = "کلمه عبور" })
                                            @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "validation-message" })
                                        </div>
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input type="checkbox">
                                                <label>مرا به خاطر بسپار</label>
                                                <a href="/Account/ForgotPassword">فراموشی رمز عبور </a>
                                            </div>
                                            <button type="submit"><span>ورود</span></button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div id="lg2" class="tab-pane">
                            <div class="login-form-container">
                                @if (ViewBag.result != null)
                                {
                                    <div class="alert alert-danger error_message">
                                        <a class="close" style="cursor: pointer;" onclick="$('.alert').hide()">×</a>
                                        @ViewBag.result
                                    </div>
                                }
                                <div class="login-register-form">
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form", @id = "frm_Register" }))
                                    {
                                        <div class="mb-30">
                                            @Html.TextBoxFor(model => model.User_Username, new { placeholder = "نام کاربری", id = "User_Username" })
                                            @Html.ValidationMessageFor(model => model.User_Username, "", new { @class = "validation-message" })
                                        </div>
                                        <div class="mb-30">
                                            @Html.PasswordFor(model => model.User_Password, new { placeholder = "کلمه عبور" })
                                            @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "validation-message" })
                                        </div>
                                        <div class="mb-30">
                                            @Html.TextBoxFor(model => model.User_Email, new { placeholder = "آدرس ایمیل" });
                                            @Html.ValidationMessageFor(model => model.User_Email, "", new { @class = "validation-message" })
                                        </div>
                                        <div class="button-box">
                                            <button type="submit"><span>ثبت نام</span></button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
